{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "rules": {
    "require-atomic-updates": "off",
    "no-console": 2,
    "object-curly-spacing": ["error", "always"],
    "indent": ["error", 2]
  }
}